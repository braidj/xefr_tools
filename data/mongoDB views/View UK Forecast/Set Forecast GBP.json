{
    $set:{
        $id{UK Forecast View.Forecast GBP}: {
            $cond: {
                if: {
                    $eq: { [ $$id{UK Forecast View.Unit}, "Per Day"] }
                },
                then: {
                    $multiply: [$$id{UK Forecast View.WorkingDays}, $$id{UK Forecast View.Net Revenue GBP}]
                },
                else: $$id{UK Forecast View.Forecast GBP}
            }
        }
    }
}

$id{UK NFI View.Multiplier}: { $cond: { if: { $eq: [$$id{UK NFI View.Source}, "TSP UK Contractor Invoices"] }, then: -1, else: 1 } }


