{
    $set: {
        $id{UK NFI View.GBPLinePrice}: {
            $cond: {
                if: {
                    $gt: [$$id{UK NFI View.ExchangeRate}, 1] 
                },
                then: { 
                    $multiply: [ $$id{UK NFI View.Multiplier}, { $divide: [$$id{UK NFI View.LinePrice}, $$id{UK NFI View.ExchangeRate}] } ]
                },
                else: { 
                $multiply: [ $$id{UK NFI View.Multiplier}, { $multiply: [$$id{UK NFI View.LinePrice}, $$id{UK NFI View.ExchangeRate}] } ]
                }
            }
        }
    }
}